<!doctype html>

<html lang="pt">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Arquivos</title>

		<%= stylesheet_link_tag "https://storage.googleapis.com/code.getmdl.io/1.0.5/material.indigo-light_blue.min.css" %>
		<%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en" %>
		<%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
		<%= stylesheet_link_tag "main" %>

		<%= javascript_include_tag "modernizr-2.8.3-respond-1.4.2.min.js" %>
		<%= javascript_include_tag "toggle-visibility.js" %>

	</head>


	<body>
	        <div id ="main-content" class="mdl-grid mdl-grid--no-spacing">

	        	<div id="arquivo">
		        	<div class="mdl-cell mdl-cell--12-col mdl-color--indigo-900 mdl-color-text--grey-100">
		        	<h1>Arquivos</h1>
		        	<span class="bottom-aligned-text"> <%= "MC#{$root.gsub '/', ' > '}" %> </span>
							<% for i in 1..$pages do %>
		        	<nav class="mdl-navigation">
			        	<ul>
			        		<li>

										<div id="upload-files">
											<div class="popupBoxWrapper">
												<div class="popupBoxContent">
													<%= form_tag({action: :navigation_params}, multipart: true) do %>
													  <%= hidden_field_tag(:parent_id, $root) %>
													  <%= hidden_field_tag(:page, i) %>
													  <%= hidden_field_tag(:fil, $files) %>
													  <%= hidden_field_tag(:owner, $owner) %>
														<%= file_field_tag :file  %>
														<%= submit_tag "Subir" %>
														<% end %>
													<p><%= link_to("fechar", "javascript:void(0)", :onclick => "toggle_visibility('upload-files');") %> </p>
												</div>
											</div>
										</div>

										<%# form_tag({action: :navigation_params}, multipart: true) do %>
										  <%# hidden_field_tag(:parent_id, $root) %>
										  <%# hidden_field_tag(:page, i) %>
										  <%# hidden_field_tag(:fil, $files) %>
										  <%# hidden_field_tag(:owner, $owner) %>

											<%# file_field_tag :file , class: "mdl-button mdl-js-button mdl-button--icon mdl-button--colored" do %>
												<!-- <i class="material-icons mdl-color-text--white">file_upload</i> -->
											<%# end %>
											<%= link_to("javascript:void(0)", :class => "mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent fab-top-right", :onclick => "toggle_visibility('upload-files');") do %>
												 <i class="material-icons mdl-color-text--white">file_upload</i>
											<% end%>

											<!-- <button class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent fab-top-right">
												<i class="material-icons mdl-color-text--white">file_upload</i>
											</button> -->
											<%# button_tag( '<i class="material-icons mdl-color-text--white">file_upload</i>'.html_safe,  type: 'submit', :id => "btnadd1",  class: "mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent fab-top-right" ) %>
										<%# end %>



									</li>
				            	<div class="mdl-tooltip" for="btnadd1">
								Adicionar arquivo
								</div>

			            	<li>
											<%= form_tag :action => 'navigation_params' do%>
											  <%= hidden_field_tag(:parent_id, $root) %>
											  <%= hidden_field_tag(:page, i) %>
												<%= hidden_field_tag(:folder_name, "Nova Pasta") %>
											  <%# text_field_tag (:folder_name) %>
												<%= button_tag( :type => 'submit', :class => "mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent fab-top-right", :id => "btnadd2" 	) do %>
													<i class="material-icons mdl-color-text--white" > folder </i>
												<% end %>

											<% end %>


											<div class="mdl-tooltip" for="btnadd2">
												Adicionar pasta
											</div>
			            </ul>
			        </nav>
							<% end %>
		        </div>

		        	<div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-cell--4-col-phone">
						<table class="mdl-data-table mdl-js-data-table mdl-color--grey-100">
							<thead>
								<tr>
									<th></th>
									<th>Nome</th>
									<th>Data de Criação</th>
									<th>Data de modificação</th>
									<th>Tamanho</th>
									<th>Tipo</th>
									<th>Autor</th>
									<th>Versões</th>
								</tr>
							</thead>

							<% unless $show == []%>
							<% ($show[($offset*($page-1))...($offset*($page-1))+1+$offset]).each_with_index do |d, index|  %>
							<% if $directories.include? d %>
							<tbody>
								<tr>

									<%=form_tag :action => 'navigation_params', :method => 'POST' do%>
						        <%= hidden_field_tag(:parent_id, d) %>
						        <%= hidden_field_tag(:page, 1) %>
										<td>
											<%= button_tag( :type => 'submit', :class => "file-button file-name") do %>
  											<i class="material-icons" role="presentation">folder</i>
											<% end %>
										</td>

										<td> <%= button_tag( :type => 'submit', :class => "file-button file-name", :id => "#{index}") do %>
											<%= d.split("/").last %>
										<% end %> </td>

										<div class="mdl-tooltip" for=<%= index %> >
											<%= d.split("/").last %>
										</div>

										<% end %>



									<td> </td>
									<td> </td>
									<td> </td>
									<td> </td>
									<td> </td>
									<td> </td>
									<td> </td>
									<td>
										<%= form_tag :action => 'navigation_params' do%>
										  <%= hidden_field_tag(:parent_id, $root) %>
										  <%= hidden_field_tag(:page, $page) %>
											<%= hidden_field_tag(:to_remove, d) %>
												<%= button_tag( :type => 'submit', :class => "mdl-button mdl-js-button mdl-button--icon mdl-button--colored") do %>
													<i class="material-icons">delete</i>
												<% end %>
									  <% end %>
										<%# form_tag :action => 'navigation_params' do%>
					          <%# hidden_field_tag(:parent_id, $root) %>
					          <%# hidden_field_tag(:rename_old_name, d) %>
					          <%# text_field_tag (:rename_new_name) %>
					          <%# submit_tag "Renomear"%>
					          <%# end %>
									</td>
								</tr>

								<% else %>

								<tr>
									<td> </td>
									<td> <p  class="file-name" id= <%= index%> > <%= take_name(d[0]) %> </p> </td> <!-- File name -->
										<div class="mdl-tooltip" for=<%= index %> >
											<%=  take_name(d[0]) %>
										</div>
									<td> <%= d[1] %> </td>  <!-- Creation date -->
									<td> <%= d[2] %> </td>  <!-- Modification date-->
									<td> <%= d[3] %> </td>	<!-- Size -->
									<td> <%= d[4] %> </td>	<!-- Type -->
									<td> <p  class="owner-name" id= <%= d[0]%> > <%= @owner = Archive.where(name: d[0].split('/').last).pluck(:owner)[0]%> </p> </td> <!-- Owner -->
										<div class="mdl-tooltip" for=<%= d[0]%>  >
											<%=  Archive.where(name: d[0].split('/').last).pluck(:owner)[0] %>
										</div>
									<td><%= $client.revisions(d[0]).length %></td>
									<td>
										<% file = $client.get_file(d[0])%>
										<%# button_to($client.media(d[0])['url'], :class => "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon mdl-button--colored")  do %>
										<%= link_to(download(d[0]), :class => "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon mdl-button--colored")  do %>
											<i class="material-icons">get_app</i>
										<% end%>
									</td>

									<td>
										<%= form_tag :action => 'navigation_params' do%>
										  <%= hidden_field_tag(:parent_id, $root) %>
										  <%= hidden_field_tag(:page, $page) %>
											<%= hidden_field_tag(:to_remove, d[0]) %>
												<%= button_tag( :type => 'submit', :class => "mdl-button mdl-js-button mdl-button--icon mdl-button--colored") do %>
													<i class="material-icons">delete</i>
												<% end %>
									  <% end %>

									</td>

							</tbody>
							<% end %>
							<% end %>

						</table>
					</div>
					<div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-cell--4-col-phone">

							<% for i in 1..$pages do%>
							<%= form_tag :action => 'navigation_params' do%>
							<%= hidden_field_tag(:parent_id, $root) %>
							<%= hidden_field_tag(:page, i) %>
							<%= button_tag(i, :type => 'submit', :class => "mdl-button mdl-js-button mdl-button--raised btn-pagination") %>
							<% end %>
							<% end %>
						<!--	<button class="mdl-button mdl-js-button mdl-button--raised btn-pagination">
						  		1
							</button> -->
					</div>
					<% end %>
				</div>
			</div>

	<%= javascript_include_tag "material.min.js" %>
  <%= javascript_include_tag "jquery-2.1.4.min.js" %>
	</body>
	
</html>
